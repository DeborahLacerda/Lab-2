@page
@using AcademicManagement
@using Lab_2.Models;
@model RegistrationModel
@{
    ViewData["Title"] = "Registration";
    var Students = DataAccess.GetAllStudents();
    var Courses = DataAccess.GetAllCourses();
    var StudentOptions = new SelectList(Students, "StudentId", "StudentName");

}

<h1 class="text-success">@ViewData["Title"]</h1>




<form method="post">
    <div>
        <div class="mt-3">
            <select asp-for="SelectedStudentId" asp-items="StudentOptions" class="btn btn-success btn-lg dropdown-toggle" id="StudentSelect" onchange="submitForm()">
                <option value="">Choose a Student</option>
            </select>
        </div>
    </div>
    <br />
    <div>
        <div>

            <button hidden="hidden" type="submit" class="btn btn-outline-success"  id="FetchStudentBtn" asp-page-handler="StudentSelected">Get Registrations</button>
         

        </div>
    </div>
    <div class="mt-3">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info">
                @TempData["InfoMessage"]
            </div>
        }
    </div>
    @if (!string.IsNullOrWhiteSpace(Model.SelectedStudentId))
    {
        @if (Model.StudentRecords.Count == 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Course Title
                            </th>
                        <th>Course Code</th>
                        <th>Checkbox</th>
                </thead>
                <tbody>
                    


                    @foreach (var course in Courses)
                    {
                        <tr>
                            <td>@course.CourseTitle</td>
                            <td>@course.CourseCode</td>


                            <td>
                                <input type="checkbox" name="SelectedCourses" value="@course.CourseCode" />
                            </td>

                        </tr>
                    }

                    <tr>
                        <td colspan="3">
                            <button type="submit" class="btn btn-outline-success" asp-page-handler="Register">Register</button>
                        </td>
                    </tr>

                </tbody>
            </table>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            <a asp-page="Registration" asp-route-sortProperty="CourseCode" asp-route-sortOrder="@(Model.SortProperty == "CourseCode" && Model.SortOrder == "Asc" ? "Desc" : "Asc")">Course Code</a>
                        </th>
                        <th>
                            <a asp-page="Registration" asp-route-sortProperty="CourseTitle" asp-route-sortOrder="@(Model.SortProperty == "CourseTitle" && Model.SortOrder == "Asc" ? "Desc" : "Asc")">Course Title</a>
                        </th>
                        <th>
                            @if (Model.StudentRecords.Any(Gr => Gr.Grade != -100))
                            {
                                <a asp-page="Registration" asp-route-sortProperty="Grade" asp-route-sortOrder="@(Model.SortProperty == "Grade" && Model.SortOrder == "Asc" ? "Desc" : "Asc")">Grade</a>
                            }
                            else
                            {
                                <span>Grade</span>
                            }
                        </th>
                    </tr>
                </thead>

                <tbody>
               
                    @for (var index = 0; index < Model.StudentRecords.Count; index++)
                    {
                        var record = Model.StudentRecords[index];
                       
                        <tr>
                            <td>@record.CourseCode</td>
                            <td>@record.CourseTitle</td>
                            <td>
                                <input type="hidden" name="gradeRecords[@index].CourseCode" value="@record.CourseCode" />
                                <input type="text" name="gradeRecords[@index].Grade" value="@((record.Grade == -100.0) ? "" : record.Grade)" />

                            </td>


                        </tr>
                    }
                </tbody>
            </table>
            <button type="submit" class="btn btn-outline-success" asp-page-handler="SubmitGrades">Submit Grades</button>

        }
    }
</form>
<script>
    document.getElementById("StudentSelect").addEventListener("change", submitForm);

    function submitForm() {
        document.getElementById("FetchStudentBtn").click();
    }
</script>